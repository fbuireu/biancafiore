{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"files": {
		"ignore": ["src/data/*"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"formatter": {
		"lineWidth": 120
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"ignore": ["*.d.ts*"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownProperty": "off"
			}
		}
	}
}
