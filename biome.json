{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["src/data/*"]
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"formatter": {
		"lineWidth": 120
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"ignore": ["*.d.ts*"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": "error"
			}
		}
	}
}
