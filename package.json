	"scripts": {
		"astro": "astro",
		"prepare": "husky",
		"dev": "astro dev",
		"start": "yarn dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"sync": "astro sync",
		"format": "biome check --write",
