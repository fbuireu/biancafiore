{
	"name": "biancafiore",
	"description": "A portfolio for the best content writer ever",
	"keywords": [
		"astro",
		"typescript",
		"css",
		"cloudflare",
		"NGO",
		"blog",
		"portfolio",
		"marketing",
		"content writing",
		"seo",
		"turso",
		"resend"
	],
	"author": "Ferran Buireu <fbuireu@gmail.com>",
	"version": "2.0.2",
	"type": "module",
	"packageManager": "yarn@4.12.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"prepare": "husky",
		"start": "astro dev --open --remote",
		"build": "yarn check && astro build --remote",
		"preview": "astro preview",
		"sync": "astro sync",
		"check": "astro check",
		"test:all": "yarn test:ut && yarn test:e2e",
		"test:ut": "vitest --passWithNoTests --logHeapUsage",
		"test:ut:changed": "yarn test:ut --bail --findRelatedTests",
		"test:e2e": "playwright test --pass-with-no-tests",
		"test:e2e:ui": "yarn test:e2e --ui",
		"test:e2e:changed": "yarn test:e2e --only-changed",
		"format": "biome check --write --no-errors-on-unmatched",
		"format:changed": "yarn format --changed",
		"format:all": "yarn format .",
		"lint": "biome lint --no-errors-on-unmatched",
		"lint:all": "yarn lint .",
		"lint:all:fix": "yarn lint:all --fix",
		"lint:changed": "yarn lint --write --changed",
		"lint:ts:typecheck": "tsc --project . --noEmit"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.5",
		"@astrojs/cloudflare": "^12.6.11",
		"@astrojs/db": "^0.18.3",
		"@astrojs/mdx": "^4.3.12",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/react": "^4.4.2",
		"@astrojs/rss": "^4.0.14",
		"@astrojs/sitemap": "^3.6.0",
		"@contentful/rich-text-html-renderer": "^17.1.6",
		"@hookform/resolvers": "^5.2.2",
		"algoliasearch": "^5.44.0",
		"astro": "^5.16.0",
		"clsx": "^2.1.1",
		"contentful": "^11.9.0",
		"gsap": "^3.13.0",
		"instantsearch.css": "^8.8.0",
		"markdown-it": "^14.1.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-globe.gl": "^2.37.0",
		"react-google-recaptcha-v3": "^1.11.0",
		"react-hook-form": "^7.66.1",
		"react-instantsearch": "^7.20.0",
		"react-router-dom": "^7.9.6",
		"resend": "^6.5.2",
		"swiper": "^12.0.3",
		"three": "^0.181.2",
		"typescript": "^5.9.3",
		"vanilla-cookieconsent": "^3.1.0"
	},
	"devDependencies": {
		"@astrojs/ts-plugin": "^1.10.5",
		"@biomejs/biome": "^2.3.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@commitlint/format": "^20.0.0",
		"@playwright/test": "^1.56.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"@types/three": "^0.181.0",
		"conventional-changelog-atom": "^5.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"vitest": "^4.0.12"
	}
}
