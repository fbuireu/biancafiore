{
	"name": "biancafiore",
	"description": "A portfolio for the best content writer ever",
	"keywords": [
		"astro",
		"typescript",
		"css",
		"cloudflare",
		"blog",
		"portfolio",
		"marketing",
		"content writing",
		"seo"
	],
	"author": "Ferran Buireu <fbuireu@gmail.com>",
	"version": "2.0.0",
	"packageManager": "yarn@4.1.1",
	"engines": {
		"node": ">=20.10.0"
	},
	"scripts": {
		"dev": "astro dev",
		"start": "yarn dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"prepare": "husky install",
		"format": "biome format --write",
		"format:check": "yarn format --check",
		"format:all": "yarn format .",
		"format:all:changed": "yarn format --changed",
		"lint": "biome lint",
		"lint:ts": "biome lint .",
		"lint:ts:fix": "yarn lint:ts --apply",
		"lint:ts:changed": "yarn lint:ts --apply --changed",
		"lint:styles": "stylelint --fix \"src/**/*.css\" --config ./.stylelintrc.cjs --max-warnings=0",
		"lint:styles:fix": "yarn lint:styles --fix",
		"lint:typecheck": "tsc --project . --noEmit"
	},
	"dependencies": {
		"@astrojs/check": "^0.5.10",
		"@astrojs/cloudflare": "^10.1.0",
		"@astrojs/mdx": "^2.2.4",
		"@astrojs/partytown": "^2.0.4",
		"@astrojs/react": "^3.2.0",
		"@astrojs/rss": "^4.0.5",
		"@astrojs/sitemap": "^3.1.2",
		"@fontsource-variable/nunito-sans": "^5.0.13",
		"@fontsource/baskervville": "^5.0.19",
		"@hookform/resolvers": "^3.3.4",
		"@million/lint": "^0.0.73",
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.75",
		"@types/react-dom": "^18.2.24",
		"astro": "^4.5.18",
		"firebase": "^10.10.0",
		"firebase-admin": "^12.0.0",
		"gsap": "^3.12.5",
		"markdown-it": "^14.1.0",
		"million": "^3.0.6",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-globe.gl": "^2.27.2",
		"react-google-recaptcha-v3": "^1.10.1",
		"react-hook-form": "^7.51.2",
		"react-router-dom": "^6.22.3",
		"resend": "^3.2.0",
		"swiper": "^11.1.1",
		"three": "^0.163.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@commitlint/config-conventional": "^19.1.0",
		"@testing-library/react": "^15.0.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/eslint": "^8.56.7",
		"@types/markdown-it": "^14.0.0",
		"@types/three": "^0.163.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5",
		"prettier-plugin-astro": "^0.13.0",
		"stylelint": "^16.3.1",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-order": "^6.0.4",
		"typescript": "^5.4.5",
		"vitest": "^1.4.0"
	}
