---
interface EmailButtonProps {
	classNames?: string;
	text?: string;
}

const { classNames, text = "Email" } = Astro.props as EmailButtonProps;
---

<button class:list={[`${classNames} link mailTo__button`]}>{text}</button>

<script is:inline data-astro-rerun type="module">
  import { mailTo } from '/src/shared/ui/components/emailButton/utils/mailTo';

  mailTo();
</script>