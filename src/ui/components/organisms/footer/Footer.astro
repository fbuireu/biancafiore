---
import './footer.css';
import logo from 'src/ui/assets/images/svg/logo.svg?raw';
import { ENCODED_BIANCA_EMAIL } from 'src/consts';
const currentYear = new Date().getFullYear();
---

<footer>
    <section class="footer__wrapper common-wrapper">
        <div class="footer__logo flex row-wrap justify-center">
            <Fragment set:html={logo} />
        </div>
        <ul class="footer__social__networks__list flex row wrap justify-center">
            <li class="footer__social__networks__item">
                <a
                    href="https://linkedin.com"
                    target="_blank"
                    rel="noopener noreferer"
                    class="footer__social__networks__link"
                >
                    LinkedIn
                </a>
            </li>
            <li class="footer__social__networks__item">
                <a href={`mailto:${atob(ENCODED_BIANCA_EMAIL)}`} class="footer__social__networks__link">Email</a>
            </li>
        </ul>
        <p class="footer__disclaimer flex justify-center">
            &copy; {currentYear} Bianca Fiore. All rights reserved.
        </p>
    </section>
</footer>
